<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.mehakmeet.gdg_round2.StoreData">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/send_data_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="84dp"
        android:text="Please Click Below to Store\n       Reports in Firebase"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="127dp" />

    <ImageButton
        android:id="@+id/send_data_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        app:srcCompat="@android:drawable/ic_menu_send"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="267dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/send_data_btn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="108dp"
        android:alpha="0"
        tools:layout_editor_absoluteX="168dp"
        tools:layout_editor_absoluteY="367dp" />
</RelativeLayout>
